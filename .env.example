APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# Default connection used by Laravel for framework tables and Sanctum tokens
# To use MySQL instead of SQLite for app internals, uncomment and set values below:
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# --- Multiple database connections ---
# User authentication database (used to verify login credentials)
USER_DB_HOST=127.0.0.1
USER_DB_PORT=3306
USER_DB_DATABASE=user_database
USER_DB_USERNAME=root
USER_DB_PASSWORD=
USER_TABLE=users
USER_EMAIL_COLUMN=email
USER_PASSWORD_COLUMN=password
USER_NAME_COLUMN=name
USER_STATUS_COLUMN=Status
USER_EMPLOYEE_ID_COLUMN=Employee_id

# Project details database
PROJECT_DB_HOST=127.0.0.1
PROJECT_DB_PORT=3306
PROJECT_DB_DATABASE=project_details_database
PROJECT_DB_USERNAME=root
PROJECT_DB_PASSWORD=
PROJECTS_TABLE=projects
PROJECTS_ID_COLUMN=Project_Id
PROJECTS_EMPLOYEE_ID_COLUMN=Employee_id
PROJECTS_STATUS_COLUMN=Project_status

# Timesheet database
TIMESHEET_DB_HOST=127.0.0.1
TIMESHEET_DB_PORT=3306
TIMESHEET_DB_DATABASE=timesheet_database
TIMESHEET_DB_USERNAME=root
TIMESHEET_DB_PASSWORD=
TIMESHEETS_TABLE=daily_timeSheet
TIMESHEETS_ID_COLUMN=Time_sheet_id
TIMESHEETS_DATE_COLUMN=Date
TIMESHEETS_EMPLOYEE_ID_COLUMN=Employee_id
TIMESHEETS_PROJECT_ID_COLUMN=Project_Id
TIMESHEETS_HOURS_COLUMN=Billable_hours
TIMESHEETS_NOTES_COLUMN=Comment

# Tasks (stored in project_details_database)
TASKS_TABLE=task_details
TASKS_ID_COLUMN=Task_id
TASKS_EMPLOYEE_ID_COLUMN=employee_id
TASKS_PROJECT_ID_COLUMN=Project_Id
TASKS_TIME_SHEET_ID_COLUMN=Time_sheet_id
TASKS_NAME_COLUMN=Task_name
TASKS_DESCRIPTION_COLUMN=Task_description
TASKS_MODE_COLUMN=Task_mode

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# CORS configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET, POST, PUT, PATCH, DELETE, OPTIONS
CORS_ALLOWED_HEADERS=Content-Type, Authorization, X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400
